        // Three.js Setup
        let scene, camera, renderer;
        let player = { x: 0, z: 0, rotY: 0 };
        let npcs = [];
        let buildings = [];
        let keys = {};
        let raycaster, mouse;
        let clock = new THREE.Clock();

        function init() {
            // Scene setup
            scene = new THREE.Scene();
            scene.fog = new THREE.Fog(0xE6D5AC, 10, 50);
            
            // Camera
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.y = 1.7; // Eye height
            
            // Renderer
            renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('game-canvas'), antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.shadowMap.enabled = true;
            renderer.shadowMap.type = THREE.PCFSoftShadowMap;
            
            // Lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);
            
            const sunLight = new THREE.DirectionalLight(0xfffaed, 1);
            sunLight.position.set(50, 100, 50);
            sunLight.castShadow = true;
            sunLight.shadow.camera.left = -50;
            sunLight.shadow.camera.right = 50;
            sunLight.shadow.camera.top = 50;
            sunLight.shadow.camera.bottom = -50;
            scene.add(sunLight);
            
            // Raycaster for interaction
            raycaster = new THREE.Raycaster();
            mouse = new THREE.Vector2();
            
            // Build initial location
            buildLocation('forum');
            
            // Event listeners
            document.addEventListener('keydown', (e) => keys[e.code] = true);
            document.addEventListener('keyup', (e) => keys[e.code] = false);
            document.addEventListener('mousemove', onMouseMove);
            document.addEventListener('click', () => {
                if (!gameState.inDialogue && !gameState.gladiatorMode) {
                    document.body.requestPointerLock();
                }
            });
            document.addEventListener('keydown', (e) => {
                if (e.code === 'KeyE') tryInteract();
                if (e.code === 'Escape') {
                    if (gameState.gladiatorMode) exitGladiatorMode();
                    else if (gameState.inDialogue) closeDialogue();
                }
            });
            
            window.addEventListener('resize', onWindowResize);
            
            // Hide loading
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
            }, 1000);
            
            animate();
        }

        function buildLocation(location) {
            // Clear existing
            while(scene.children.length > 0){ 
                scene.remove(scene.children[0]); 
            }
            npcs = [];
            buildings = [];
            
            // Re-add lights
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);
            const sunLight = new THREE.DirectionalLight(0xfffaed, 1);
            sunLight.position.set(50, 100, 50);
            sunLight.castShadow = true;
            scene.add(sunLight);
            
            if (location === 'forum') {
                buildForum();
            } else if (location === 'colosseum') {
                buildColosseum();
            }
            
            // Spawn NPCs
            const locationNPCs = npcDatabase[location] || [];
            locationNPCs.forEach(npcData => {
                createNPC(npcData);
            });
            
            gameState.currentLocation = location;
            document.getElementById('current-location').textContent = 
                location === 'forum' ? 'The Forum Romanum' : 'The Flavian Amphitheater';
        }

        function buildForum() {
            // Ground - Roman paving stones
            const groundGeometry = new THREE.PlaneGeometry(100, 100);
            const groundMaterial = new THREE.MeshStandardMaterial({ 
                color: 0xC9B59E,
                roughness: 0.9 
            });
            const ground = new THREE.Mesh(groundGeometry, groundMaterial);
            ground.rotation.x = -Math.PI / 2;
            ground.receiveShadow = true;
            scene.add(ground);
            
            // Temple of Saturn (iconic Forum building)
            createTemple(-15, -15, 0xD4AF37, 'Temple of Saturn');
            
            // Basilica Julia
            createBasilica(20, 0, 0xD2691E);
            
            // Rostra (speakers platform)
            createRostra(0, -10);
            
            // Columns scattered around
            for (let i = 0; i < 20; i++) {
                const x = (Math.random() - 0.5) * 60;
                const z = (Math.random() - 0.5) * 60;
                if (Math.abs(x) > 5 || Math.abs(z) > 5) { // Keep center clear
                    createColumn(x, z);
                }
            }
            
            // Colosseum entrance trigger
            createPortal(0, -40, 'colosseum', 'To the Colosseum');
            
            // Set player position
            player.x = 0;
            player.z = 0;
            camera.position.set(0, 1.7, 0);
        }

        function buildColosseum() {
            // Ground
            const groundGeometry = new THREE.PlaneGeometry(200, 200);
            const groundMaterial = new THREE.MeshStandardMaterial({ color: 0x8B7355 });
            const ground = new THREE.Mesh(groundGeometry, groundMaterial);
            ground.rotation.x = -Math.PI / 2;
            ground.receiveShadow = true;
            scene.add(ground);
            
            // Colosseum structure (simplified elliptical amphitheater)
            const colosseumGroup = new THREE.Group();
            
            // Outer walls
            for (let i = 0; i < 4; i++) {
                const wallGeo = new THREE.BoxGeometry(60, 15, 5);
                const wallMat = new THREE.MeshStandardMaterial({ color: 0xD2691E });
                const wall = new THREE.Mesh(wallGeo, wallMat);
                wall.position.y = 7.5;
                
                if (i === 0) { wall.position.z = -30; wall.position.x = 0; }
                else if (i === 1) { wall.position.z = 30; wall.position.x = 0; }
                else if (i === 2) { wall.position.x = -30; wall.position.z = 0; wall.rotation.y = Math.PI/2; }
                else { wall.position.x = 30; wall.position.z = 0; wall.rotation.y = Math.PI/2; }
                
                wall.castShadow = true;
                wall.receiveShadow = true;
                colosseumGroup.add(wall);
            }
            
            // Arena floor (sand)
            const arenaGeo = new THREE.CylinderGeometry(25, 25, 1, 32);
            const arenaMat = new THREE.MeshStandardMaterial({ color: 0xDEB887 });
            const arena = new THREE.Mesh(arenaGeo, arenaMat);
            arena.position.y = 0.5;
            colosseumGroup.add(arena);
            
            // Seating tiers
            for (let tier = 0; tier < 3; tier++) {
                const radius = 30 + tier * 5;
                const height = 2;
                const seatsGeo = new THREE.CylinderGeometry(radius, radius + 2, height, 32, 1, true);
                const seatsMat = new THREE.MeshStandardMaterial({ color: 0xCD853F, side: THREE.DoubleSide });
                const seats = new THREE.Mesh(seatsGeo, seatsMat);
                seats.position.y = 1 + tier * 2.5;
                colosseumGroup.add(seats);
            }
            
            scene.add(colosseumGroup);
            
            // Return portal
            createPortal(0, 45, 'forum', 'Return to Forum');
            
            // Set player in stands
            player.x = 0;
            player.z = 35;
            camera.position.set(0, 8, 35);
            camera.lookAt(0, 0, 0);
        }

        function createTemple(x, z, color, name) {
            const group = new THREE.Group();
            group.position.set(x, 0, z);
            
            // Podium
            const podium = new THREE.Mesh(
                new THREE.BoxGeometry(12, 2, 8),
                new THREE.MeshStandardMaterial({ color: 0xD2691E })
            );
            podium.position.y = 1;
            podium.castShadow = true;
            group.add(podium);
            
            // Columns
            for (let i = 0; i < 6; i++) {
                const col = new THREE.Mesh(
                    new THREE.CylinderGeometry(0.4, 0.4, 8),
                    new THREE.MeshStandardMaterial({ color: 0xF5F5DC })
                );
                col.position.set(-5 + i * 2, 5, 0);
                col.castShadow = true;
                group.add(col);
            }
            
            // Roof
            const roof = new THREE.Mesh(
                new THREE.ConeGeometry(7, 3, 4),
                new THREE.MeshStandardMaterial({ color: color })
            );
            roof.position.y = 10.5;
            roof.rotation.y = Math.PI / 4;
            roof.scale.z = 0.6;
            group.add(roof);
            
            scene.add(group);
            buildings.push({ mesh: group, name: name });
        }

        function createBasilica(x, z, color) {
            const group = new THREE.Group();
            group.position.set(x, 0, z);
            
            const building = new THREE.Mesh(
                new THREE.BoxGeometry(30, 12, 15),
                new THREE.MeshStandardMaterial({ color: color })
            );
            building.position.y = 6;
            building.castShadow = true;
            group.add(building);
            
            // Door
            const door = new THREE.Mesh(
                new THREE.BoxGeometry(4, 6, 1),
                new THREE.MeshStandardMaterial({ color: 0x3d2817 })
            );
            door.position.set(0, 3, 7.6);
            group.add(door);
            
            scene.add(group);
        }

        function createRostra(x, z) {
            const platform = new THREE.Mesh(
                new THREE.BoxGeometry(8, 2, 6),
                new THREE.MeshStandardMaterial({ color: 0x808080 })
            );
            platform.position.set(x, 1, z);
            platform.castShadow = true;
            platform.name = 'rostra';
            scene.add(platform);
            buildings.push({ mesh: platform, name: 'Rostra (Speakers Platform)' });
        }

        function createColumn(x, z) {
            const col = new THREE.Mesh(
                new THREE.CylinderGeometry(0.5, 0.5, 6),
                new THREE.MeshStandardMaterial({ color: 0xF5F5DC })
            );
            col.position.set(x, 3, z);
            col.castShadow = true;
            scene.add(col);
        }

        function createPortal(x, z, target, label) {
            const portal = new THREE.Mesh(
                new THREE.CylinderGeometry(2, 2, 0.2, 8),
                new THREE.MeshStandardMaterial({ 
                    color: 0xFFD700,
                    emissive: 0xFFD700,
                    emissiveIntensity: 0.5
                })
            );
            portal.position.set(x, 0.1, z);
            portal.userData = { type: 'portal', target: target, label: label };
            scene.add(portal);
            
            // Floating text effect
            const sprite = createTextSprite(label);
            sprite.position.set(x, 3, z);
            scene.add(sprite);
        }

        function createTextSprite(text) {
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = 256;
            canvas.height = 64;
            ctx.fillStyle = '#D4AF37';
            ctx.font = 'bold 24px Cinzel';
            ctx.textAlign = 'center';
            ctx.fillText(text, 128, 40);
            
            const texture = new THREE.CanvasTexture(canvas);
            const material = new THREE.SpriteMaterial({ map: texture });
            return new THREE.Sprite(material);
        }

        function createNPC(data) {
            const group = new THREE.Group();
            group.position.set(data.position.x, 0, data.position.z);
            
            // Body (toga-colored based on class)
            const bodyColor = data.class === 'Patrician' ? 0xFFFFFF : 
                             data.class === 'Equestrian' ? 0xFFD700 : 
                             data.class === 'Freedman' ? 0x4B0082 : 0x8B4513;
            
            const body = new THREE.Mesh(
                new THREE.CylinderGeometry(0.3, 0.3, 1.6),
                new THREE.MeshStandardMaterial({ color: bodyColor })
            );
            body.position.y = 0.8;
            body.castShadow = true;
            group.add(body);
            
            // Head
            const head = new THREE.Mesh(
                new THREE.SphereGeometry(0.25),
                new THREE.MeshStandardMaterial({ color: 0xFFDBAC })
            );
            head.position.y = 1.8;
            group.add(head);
            
            // Name tag
            const nameSprite = createTextSprite(data.name);
            nameSprite.position.set(0, 2.5, 0);
            nameSprite.scale.set(4, 1, 1);
            group.add(nameSprite);
            
            group.userData = { 
                type: 'npc', 
                id: data.id,
                data: data,
                interactable: true 
            };
            
            scene.add(group);
            npcs.push(group);
        }

        function onMouseMove(event) {
            if (document.pointerLockElement === document.body) {
                player.rotY -= event.movementX * 0.002;
                camera.rotation.x -= event.movementY * 0.002;
                camera.rotation.x = Math.max(-Math.PI/2, Math.min(Math.PI/2, camera.rotation.x));
            }
        }

        function updateMovement() {
            if (gameState.inDialogue || gameState.gladiatorMode) return;
            
            const speed = 0.1;
            const direction = new THREE.Vector3();
            
            if (keys['KeyW']) direction.z -= 1;
            if (keys['KeyS']) direction.z += 1;
            if (keys['KeyA']) direction.x -= 1;
            if (keys['KeyD']) direction.x += 1;
            
            if (direction.length() > 0) {
                direction.normalize();
                direction.applyAxisAngle(new THREE.Vector3(0, 1, 0), player.rotY);
                
                const newX = player.x + direction.x * speed;
                const newZ = player.z + direction.z * speed;
                
                // Simple collision detection with buildings
                let canMove = true;
                buildings.forEach(b => {
                    const dx = newX - b.mesh.position.x;
                    const dz = newZ - b.mesh.position.z;
                    if (Math.abs(dx) < 5 && Math.abs(dz) < 5) canMove = false;
                });
                
                if (canMove && Math.abs(newX) < 48 && Math.abs(newZ) < 48) {
                    player.x = newX;
                    player.z = newZ;
                }
            }
            
            camera.position.x = player.x;
            camera.position.z = player.z;
            camera.rotation.y = player.rotY;
            
            // Check portals
            scene.traverse((obj) => {
                if (obj.userData && obj.userData.type === 'portal') {
                    const dx = player.x - obj.position.x;
                    const dz = player.z - obj.position.z;
                    if (Math.sqrt(dx*dx + dz*dz) < 2) {
                        buildLocation(obj.userData.target);
                        showNotification(`Traveling to ${obj.userData.target}...`);
                    }
                }
            });
        }

        function tryInteract() {
            if (gameState.inDialogue) return;
            
            // Find nearest NPC
            let nearest = null;
            let minDist = 5;
            
            npcs.forEach(npc => {
                const dx = player.x - npc.position.x;
                const dz = player.z - npc.position.z;
                const dist = Math.sqrt(dx*dx + dz*dz);
                if (dist < minDist) {
                    minDist = dist;
                    nearest = npc;
                }
            });
            
            if (nearest) {
                startDialogue(nearest.userData.data);
            }
        }

        function startDialogue(npcData) {
            gameState.inDialogue = true;
            gameState.currentNPC = npcData;
            document.exitPointerLock();
            
            const box = document.getElementById('dialogue-box');
            box.style.display = 'block';
            
            document.getElementById('speaker-name').textContent = npcData.name;
            document.getElementById('speaker-class').textContent = npcData.class;
            document.getElementById('speaker-portrait').textContent = npcData.icon;
            
            updateFriendshipDisplay(npcData);
            
            // Show greeting
            showDialogueText(npcData.dialogues.greeting);
            
            // Generate options based on available topics
            const optionsDiv = document.getElementById('dialogue-options');
            optionsDiv.innerHTML = '';
            
            Object.keys(npcData.dialogues.topics).forEach(topicKey => {
                const topic = npcData.dialogues.topics[topicKey];
                const btn = document.createElement('div');
                btn.className = 'dialogue-option';
                btn.textContent = `Ask about ${topicKey.replace('_', ' ')}`;
                btn.onclick = () => selectTopic(topicKey);
                optionsDiv.appendChild(btn);
            });
            
            // Add leave option
            const leaveBtn = document.createElement('div');
            leaveBtn.className = 'dialogue-option';
            leaveBtn.style.borderColor = '#ff4444';
            leaveBtn.textContent = 'Say farewell';
            leaveBtn.onclick = closeDialogue;
            optionsDiv.appendChild(leaveBtn);
        }

        function selectTopic(topicKey) {
            const npc = gameState.currentNPC;
            const topic = npc.dialogues.topics[topicKey];
            
            showDialogueText(topic.text);
            
            const optionsDiv = document.getElementById('dialogue-options');
            optionsDiv.innerHTML = '';
            
            topic.options.forEach(opt => {
                const btn = document.createElement('div');
                btn.className = 'dialogue-option';
                btn.textContent = opt.text;
                btn.onclick = () => {
                    // Apply friendship effect
                    if (!gameState.friendships[npc.id]) gameState.friendships[npc.id] = npc.friendship;
                    gameState.friendships[npc.id] += opt.effect;
                    
                    // Clamp friendship
                    gameState.friendships[npc.id] = Math.max(0, Math.min(100, gameState.friendships[npc.id]));
                    
                    updateFriendshipDisplay(npc);
                    showDialogueText(opt.response);
                    
                    // Handle special actions
                    if (opt.action === 'unlock_games') {
                        showNotification('You may now enter the Colosseum!');
                    }
                    if (opt.action === 'start_games') {
                        setTimeout(() => {
                            closeDialogue();
                            enterGladiatorMode();
                        }, 2000);
                    }
                    
                    // Clear options temporarily
                    optionsDiv.innerHTML = '';
                    setTimeout(() => {
                        // Return to main topics
                        const backBtn = document.createElement('div');
                        backBtn.className = 'dialogue-option';
                        backBtn.textContent = 'Discuss something else...';
                        backBtn.onclick = () => startDialogue(npc);
                        optionsDiv.appendChild(backBtn);
                    }, 1000);
                };
                optionsDiv.appendChild(btn);
            });
        }

        function updateFriendshipDisplay(npc) {
            const friendship = gameState.friendships[npc.id] || npc.friendship;
            const bar = document.getElementById('friendship-bar');
            const text = document.getElementById('friendship-text');
            
            bar.style.width = friendship + '%';
            
            if (friendship < 30) {
                text.textContent = 'Hostile';
                text.style.color = '#ff4444';
            } else if (friendship < 50) {
                text.textContent = 'Wary';
                text.style.color = '#ffaa00';
            } else if (friendship < 70) {
                text.textContent = 'Friendly';
                text.style.color = '#ffff00';
            } else {
                text.textContent = 'Close Friend';
                text.style.color = '#44ff44';
            }
            
            // Update global stats
            updateStats();
        }

        function showDialogueText(text) {
            const div = document.getElementById('dialogue-text');
            div.innerHTML = '';
            let i = 0;
            const interval = setInterval(() => {
                div.innerHTML += text.charAt(i);
                i++;
                if (i >= text.length) clearInterval(interval);
            }, 20);
        }

        function closeDialogue() {
            gameState.inDialogue = false;
            gameState.currentNPC = null;
            document.getElementById('dialogue-box').style.display = 'none';
        }

        function enterGladiatorMode() {
            gameState.gladiatorMode = true;
            document.getElementById('gladiator-overlay').style.display = 'flex';
            showNotification('The games have begun! The crowd roars...');
            
            // Simulate crowd noise effect with visual shake
            let shakeIntensity = 0.1;
            const shakeInterval = setInterval(() => {
                if (!gameState.gladiatorMode) {
                    clearInterval(shakeInterval);
                    return;
                }
                camera.position.x += (Math.random() - 0.5) * shakeIntensity;
                camera.position.y += (Math.random() - 0.5) * shakeIntensity;
            }, 50);
        }

        function exitGladiatorMode() {
            gameState.gladiatorMode = false;
            document.getElementById('gladiator-overlay').style.display = 'none';
            buildLocation('forum');
            showNotification('You leave the bloody spectacle behind...');
        }

        function updateStats() {
            const friends = Object.values(gameState.friendships).filter(f => f > 60).length;
            document.getElementById('friends-count').textContent = friends;
            
            const rep = Object.values(gameState.friendships).reduce((a, b) => a + b, 0) / 
                       (Object.keys(gameState.friendships).length || 1);
            document.getElementById('rep-value').textContent = 
                rep > 70 ? 'Honored' : rep > 50 ? 'Respected' : rep > 30 ? 'Known' : 'Disliked';
        }

        function showNotification(text) {
            const container = document.getElementById('notification-container');
            const notif = document.createElement('div');
            notif.className = 'notification roman-font';
            notif.textContent = text;
            container.appendChild(notif);
            
            setTimeout(() => notif.classList.add('show'), 10);
            setTimeout(() => {
                notif.classList.remove('show');
                setTimeout(() => notif.remove(), 500);
            }, 4000);
        }

        function checkInteractionPrompt() {
            const prompt = document.getElementById('interaction-prompt');
            let nearNPC = false;
            
            npcs.forEach(npc => {
                const dx = player.x - npc.position.x;
                const dz = player.z - npc.position.z;
                if (Math.sqrt(dx*dx + dz*dz) < 5) nearNPC = true;
            });
            
            prompt.style.display = (nearNPC && !gameState.inDialogue) ? 'block' : 'none';
        }

        function animate() {
            requestAnimationFrame(animate);
            
            updateMovement();
            checkInteractionPrompt();
            
            // Animate NPCs (subtle idle movement)
            npcs.forEach((npc, i) => {
                npc.position.y = Math.sin(clock.getElapsedTime() + i) * 0.05;
                npc.rotation.y = Math.sin(clock.getElapsedTime() * 0.5 + i) * 0.1;
            });
            
            renderer.render(scene, camera);
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        // Menu functions
        function startGame() {
            document.getElementById('main-menu').style.display = 'none';
            document.getElementById('ui-layer').classList.remove('hidden');
            init();
            showNotification('Welcome to Rome! Use WASD to move, mouse to look, E to interact.');
        }

        function showInstructions() {
            document.getElementById('instructions').classList.remove('hidden');
        }

        function hideInstructions() {
            document.getElementById('instructions').classList.add('hidden');
        }
    </script>
</body>
</html>
